@page "/CreateAccount"

@using LivrariaFront.ViewModels;

@inherits CreateAccountBase;

<style>
    .form-control{
        display: inline-block;
        width: 300px;
        height: 24px;
    }

    .container{
        width: 500px;
    }

    label{
        display: block;
    }
</style>

<div class="container text-center mt-2 card">

    <h1>Area de cadastro</h1>

    <h2>Cadastre o cliente</h2>

    <EditForm Model="@userTemp" OnSubmit="@SubmitForm">

        <hr />
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label form="name">Nome: </label>
            <InputText class="form-control" id="name" @bind-Value="userTemp.Name" placeholder="Nome" />
            <small class="form-text">O nome precisa ter no mínimo 8 letras</small>

        </div>

        <div class="form-group">
            <label form="email">Email: </label>
            <InputText class="form-control" id="email" @bind-Value="userTemp.Email" placeholder="Seu e-mail" />
            <small class="form-text">Ex: @@yahoo.com</small>

        </div>

        <div class="form-group">
            <label form="numberPhone">Número de telefone: </label>
            <InputText class="form-control" id="numerPhone" @bind-Value="userTemp.NumberPhone" placeholder="Número de telefone"></InputText>
            <small class="form-text">Ex: (XX) XXXX-XXXX</small>
        </div>

        <div class="form-group">
            <label form="password">Digite sua senha: </label>
            <InputText class="form-control"  id="password" @bind-Value="userTemp.Password" type="password" placeholder="Sua senha"></InputText>
        </div>

        <div class="form-group">
            <label form="password">Digite a sua senha novamente: </label>
            <InputText class="form-control" id="passwordConfirm" @bind-Value="userTemp.ConfirmPassword" type="password" placeholder="Sua senha"></InputText>
        </div>

        <div class="row justify-content-center">
            <button type="submit" class="btn btn-success mb-3">Cadastrar</button>
        </div>
    </EditForm>
</div>
}
